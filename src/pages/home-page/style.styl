.home-section-text
  margin-top: 15vh

.tns-nav
  text-align: center

.tns-outer > button[data-action = "start"], .tns-outer > button[data-action = "stop"]
  display: none

.tns-nav-active
  background: #5F5F63 !important
  height: 3px
  border-radius: 3px

.tns-nav > button
  border-radius: 3px
  height: 3px
  background: #fff
  width: 10%
  box-shadow: none
  border: none

.tns-nav > button:not(:last-child)
  border-right: 2px solid #ccc

.text-larger
  font-size: 32px